<div class="container">
  <div class="row mt-4">

    <div class="swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
           <%= image_tag 'book-1.jpg' %>
        </div>
        <div class="swiper-slide">
           <%= image_tag 'book-2.jpg' %>
        </div>
        <div class="swiper-slide">
           <%= image_tag 'book-3.jpg' %>
        </div>
        <div class="swiper-slide">
           <%= image_tag 'book-4.jpg' %>
        </div>
        <div class="swiper-slide">
           <%= image_tag 'book-5.jpg' %>
        </div>
      </div>
      <!-- ページネーションの要素 -->
      <div class="swiper-pagination"></div>
      <!-- ナビゲーションボタン （前、次） -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>

    <div class="mx-auto col-sm-10 col-lg-8 col-xl-6">
      <h1 class="heading07" data-en="Bookers">welcome to <strong><i class="fa-solid fa-book"></i>Bookers !!</strong></h1>
      <p class="top-page">In <i class="fa-solid fa-book"></i>Bookers,</p>
      <p class="top-page">you can share and exchange your opinions , inpressions , and emotions</p>
      <p class="top-page">about various books!</p>

      <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-block", method: :post %>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-info btn-block" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
