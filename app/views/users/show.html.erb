<%= render 'books/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= link_to (image_tag book.user.get_profile_image(80,80)), user_path(book.user.id) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td id="favorite_btn_<%= book.id %>">
                <%= render "favorites/btn", book: book %>
              </td>
              <td><%= render "books/static.rate", book: book %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>